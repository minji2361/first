<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis .org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kg.myapp.dao.IUsersRepository">

	<resultMap id="usersMap" type="com.kg.myapp.vo.UsersVO">
	<result property="userid" column="userid" />
	<result property="password" column="password" />
	<result property="name" column="name" />
	<result property="tel" column="tel" />
	<result property="picture" column="picture" />
	<result property="pictureSize" column="picture_size" />
	</resultMap>

	<insert id="insertUsers" parameterType="com.kg.myapp.vo.UsersVO">
	insert into emp_users values ( #{userid}, #{password}, #{name}, #{tel}, #{picture}, #{pictureSize})
	</insert>
	
	<select id="getPassword" parameterType="string" resultType="string">
	select password from emp_users where userid=#{user}
	</select>
	
	<select id="getUsers" parameterType="string" resultMap="usersMap">
	select userid, password, name, tel, picture, picture_size as pictureSize 
	from emp_users where userid=#{user}
	</select>
	
	<select id="idCheck" parameterType="string" resultType="int">
	select count(userid) from emp_users where userid=${userid}
	</select>
	
	<!-- compile error는 오류 상태에서 서버를 실행시킨 것 -> 서버 오른클릭해서 클린 한 뒤에 다시 실행하면 된다. -->

</mapper>





